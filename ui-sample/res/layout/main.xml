<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<TextView 
		android:text="Entity Key"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
	
    <EditText 
    	android:id="@+id/txtEntity" 
    	android:text="http://entity1.com"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>   
   
	<TextView 
		android:text="Facebook App Id"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>	
    
    <EditText 
    	android:id="@+id/txtFBId" 
    	android:text="209798315709193"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
    	
	<CheckBox android:id="@+id/chkFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook SSO Enabled" 
        android:checked="true"/>
        
	<CheckBox android:id="@+id/chkMockFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Mocked Facebook Auth" 
        android:checked="false"/>
        
    <Button 
    	android:id="@+id/btnClearCache"
    	android:text="Clear Auth Cache"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>	
    	        
    <Button 
    	android:id="@+id/btnCommentView"
    	android:text="Show Comments"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>	
    	
    <Button 
    	android:id="@+id/btnActionView"
    	android:text="Show Action Bar"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>	        
    	
</LinearLayout>
