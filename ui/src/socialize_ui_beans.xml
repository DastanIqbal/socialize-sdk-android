<beans>
	
	<factory id="commentItemViewFactory" makes="commentListItem"/>
	<factory id="listItemLoadingViewFactory" makes="listItemLoadingView"/>
	
	<bean id="socializeUIErrorHandler" class="com.socialize.ui.error.DialogErrorHandler">
		<property name="drawables" ref="drawables"/>
		<property name="config" ref="config"/>
	</bean>
	
	<bean id="progressDialogFactory" class="com.socialize.ui.dialog.ProgressDialogFactory">
		<property name="logger" ref="logger"/>
		<property name="drawables" ref="drawables"/>
	</bean>
	
	<bean id="socializeView" abstract="true">
		<property name="errorHandler" ref="socializeUIErrorHandler"/>
	</bean>
	
	<bean id="dateUtils" class="com.socialize.ui.util.DateUtils"/>
	
	<bean id="geoUtils" class="com.socialize.ui.util.GeoUtils">
		<constructor-arg type="context"/>
	</bean>
	
	<bean id="keyboardUtils" class="com.socialize.ui.util.KeyboardUtils">
		<constructor-arg type="context"/>
	</bean>
	
	<bean id="userService" class="com.socialize.ui.user.DefaultUserService"/>
	
	<bean id="colors" class="com.socialize.ui.util.Colors">
	
		<init-method name="init"/>

		<property name="colorHexCodes">
			<map>
				<entry>
					<key value="TITLE"/>
					<value value="#00abe3"/>
				</entry>
				<entry>
					<key value="BODY"/>
					<value value="#ffffff"/>
				</entry>
				<entry>
					<key value="BUTTON_BOTTOM"/>
					<value value="#146288"/>
				</entry>
				<entry>
					<key value="BUTTON_TOP"/>
					<value value="#1481a1"/>
				</entry>
				<entry>
					<key value="BUTTON_TOP_STROKE"/>
					<value value="#19a1b9"/>
				</entry>
				<entry>
					<key value="BUTTON_BOTTOM_STROKE"/>
					<value value="#166d93"/>
				</entry>				
				<entry>
					<key value="BUTTON_STROKE"/>
					<value value="#00435c"/>
				</entry>						
				<entry>
					<key value="TEXT_BG"/>
					<value value="#ffffff"/>
				</entry>
				<entry>
					<key value="TEXT_STROKE"/>
					<value value="#00b0e4"/>
				</entry>
				<entry>
					<key value="HEADER"/>
					<value value="#ffffff"/>
				</entry>
				<entry>
					<key value="LIST_ITEM_BG"/>
					<value value="#454545"/>
				</entry>
				<entry>
					<key value="STANDARD_BACKGROUND_COLOR"/>
					<value value="#38444f"/>
				</entry>
				<entry>
					<key value="LOADING_ITEM_BG"/>
					<value value="#000000"/>
				</entry>
				<entry>
					<key value="FACEBOOK_BOTTOM"/>
					<value value="#2f4a7b"/>
				</entry>
				<entry>
					<key value="FACEBOOK_TOP"/>
					<value value="#516b9d"/>
				</entry>	
				<entry>
					<key value="FACEBOOK_STROKE"/>
					<value value="#1a3360"/>
				</entry>
				<entry>
					<key value="FACEBOOK_TOP_STROKE"/>
					<value value="#6787b6"/>
				</entry>
				<entry>
					<key value="FACEBOOK_BOTTOM_STROKE"/>
					<value value="#355389"/>
				</entry>
				<entry>
					<key value="GRAY_BTN_BOTTOM"/>
					<value value="#555555"/>
				</entry>
				<entry>
					<key value="GRAY_BTN_TOP"/>
					<value value="#717171"/>
				</entry>	
				<entry>
					<key value="GRAY_BTN_TOP_STROKE"/>
					<value value="#8f8f8f"/>
				</entry>	
				<entry>
					<key value="GRAY_BTN_BOTTOM_STROKE"/>
					<value value="#5e5e5e"/>
				</entry>	
			</map>
		</property>
	</bean>
	
<!-- General UI -->
	
	<bean 
		id="socializeButton" 
		class="com.socialize.ui.button.SocializeButton"		
		singleton="false"
		abstract="true">
		<constructor-arg type="activity"/>
		<property name="drawables" ref="drawables"/>
		<property name="deviceUtils" ref="deviceUtils"/>
		<property name="colors" ref="colors"/>
		<property name="bottomColor" value="BUTTON_BOTTOM"/>
		<property name="topColor" value="BUTTON_TOP"/>
		<property name="strokeTopColor" value="BUTTON_TOP_STROKE"/>
		<property name="strokeBottomColor" value="BUTTON_BOTTOM_STROKE"/>
		<property name="padding" value="8" type="integer"/>
		
		<init-method name="init"/>
	</bean>
	
	<bean 
		id="socializeSkipAuthButton" 
		singleton="false"
		extends="socializeButton">
		<constructor-arg type="activity"/>
		<property name="text" value="Post Anonymously"/>
		<property name="bottomColor" value="GRAY_BTN_BOTTOM"/>
		<property name="topColor" value="GRAY_BTN_TOP"/>
		<property name="strokeTopColor" value="GRAY_BTN_TOP_STROKE"/>
		<property name="strokeBottomColor" value="GRAY_BTN_BOTTOM_STROKE"/>
		<property name="width" value="200" type="integer"/>
		<property name="height" value="42" type="integer"/>
		<property name="textSize" value="16" type="integer"/>
		<property name="textAlign" value="center"/>
	</bean>
	
<!-- Authenticate Dialog -->
	<factory id="authRequestDialogFactory" makes="authRequestDialog"/>
	<factory id="authConfirmDialogFactory" makes="authConfirmDialog"/>
	<factory id="authRequestDialogViewFactory" makes="authRequestDialogView"/>
	<factory id="authConfirmDialogViewFactory" makes="authConfirmDialogView"/>
	
	<!-- 
		<factory id="authConfirmDialogHeaderFactory" makes="authConfirmDialogHeader"/>
	
		<bean 
			id="authConfirmDialogHeader" 
			class="com.socialize.ui.auth.AuthConfirmDialogHeader"		
			singleton="false">
			<constructor-arg type="activity"/>
			<property name="deviceUtils" ref="deviceUtils"/>
			<property name="drawables" ref="drawables"/>
			<init-method name="init"/>
		</bean>
	 -->
	 
	<bean 
		id="authRequestDialog" 
		class="com.socialize.ui.auth.AuthRequestDialogFactory"		
		singleton="false">
		<property name="logger" ref="logger"/>
		<property name="authConfirmDialogFactory" ref="authConfirmDialogFactory"/>
		<property name="authRequestDialogViewFactory" ref="authRequestDialogViewFactory"/>
		<property name="drawables" ref="drawables"/>
	</bean>
	
	<bean 
		id="authConfirmDialog" 
		class="com.socialize.ui.auth.AuthConfirmDialogFactory"		
		singleton="false">
		<property name="logger" ref="logger"/>
		<property name="authConfirmDialogViewFactory" ref="authConfirmDialogViewFactory"/>
		<property name="drawables" ref="drawables"/>
	</bean>
	
	<bean 
		id="authRequestDialogView" 
		class="com.socialize.ui.auth.AuthRequestDialogView"		
		singleton="false">
		<constructor-arg type="activity"/>
		<property name="deviceUtils" ref="deviceUtils"/>
		<property name="facebookSignInButton" ref="facebookSignInButton"/>
		<property name="text" value="Sign in with Facebook to ensure your comment is saved."/>
		<init-method name="init"/>
	</bean>
	
	<bean 
		id="authConfirmDialogView" 
		class="com.socialize.ui.auth.AuthConfirmDialogView"		
		singleton="false">
		<constructor-arg type="activity"/>
		<property name="deviceUtils" ref="deviceUtils"/>
		<property name="socializeSkipAuthButton" ref="socializeSkipAuthButton"/>
		<property name="text" value="Your data is safe with us, but you can still post anonymously if you're shy."/>
		<init-method name="init"/>
	</bean>
	
	<!-- Facebook -->
	<bean 
		id="facebookAuthClickListener" 
		class="com.socialize.ui.facebook.FacebookAuthClickListener"		
		singleton="false">
		<property name="config" ref="config"/>
		<property name="dialogFactory" ref="progressDialogFactory"/>
	</bean>
	
	<bean 
		id="facebookSignOutClickListener" 
		class="com.socialize.ui.facebook.FacebookSignOutClickListener"		
		singleton="false">
		<property name="drawables" ref="drawables"/>
		<property name="logger" ref="logger"/>
		<property name="config" ref="config"/>
		<property name="facebookSignOutTaskFactory" ref="facebookSignOutTaskFactory"/>
	</bean>
	
	<bean 
		id="facebookSignInButton" 
		class="com.socialize.ui.facebook.FacebookButton"		
		singleton="false"
		extends="socializeButton">
		<constructor-arg type="activity"/>
		<property name="facebookAuthClickListener" ref="facebookAuthClickListener"/>
		<property name="text" value="Sign in with Facebook"/>
		<property name="imageName" value="fb_button.png"/>
		<property name="bottomColor" value="FACEBOOK_BOTTOM"/>
		<property name="topColor" value="FACEBOOK_TOP"/>
		<property name="strokeTopColor" value="FACEBOOK_TOP_STROKE"/>
		<property name="strokeBottomColor" value="FACEBOOK_BOTTOM_STROKE"/>
		<property name="width" value="200" type="integer"/>
		<property name="height" value="42" type="integer"/>
		<property name="textSize" value="16" type="integer"/>
	</bean>
	
	<bean 
		id="facebookSignOutButton" 
		singleton="false"
		extends="socializeButton">
		<constructor-arg type="activity"/>
		<property name="text" value="Sign out of Facebook"/>
		<property name="imageName" value="fb_button.png"/>
		<property name="bottomColor" value="FACEBOOK_BOTTOM"/>
		<property name="topColor" value="FACEBOOK_TOP"/>
		<property name="strokeTopColor" value="FACEBOOK_TOP_STROKE"/>
		<property name="strokeBottomColor" value="FACEBOOK_BOTTOM_STROKE"/>
		<property name="height" value="36" type="integer"/>
		<property name="width" value="150" type="integer"/>
		<property name="textSize" value="11" type="integer"/>
	</bean>
	
	<bean 
		id="facebookSignOutTask" 
		singleton="false"
		class="com.socialize.ui.facebook.FacebookSignOutTask">
		<property name="logger" ref="logger"/>
		<property name="dialogFactory" ref="progressDialogFactory"/>
	</bean>
	
	<factory id="facebookSignOutTaskFactory" makes="facebookSignOutTask"/>

<!-- Comment UI -->
	
	<bean 
		id="commentAdapter" 
		class="com.socialize.ui.comment.CommentAdapter">
		<constructor-arg type="activity"/>
		<property name="commentItemViewFactory" ref="commentItemViewFactory"/>
		<property name="listItemLoadingViewFactory" ref="listItemLoadingViewFactory"/>
		<property name="drawables" ref="drawables"/>
		<property name="logger" ref="logger"/>
		<property name="deviceUtils" ref="deviceUtils"/><!-- Defined in socialize_beans.xml -->
		<property name="dateUtils" ref="dateUtils"/>
		<property name="base64Utils" ref="base64Utils"/><!-- Defined in socialize_beans.xml -->
		<property name="imageLoader" ref="imageLoader"/><!-- Defined in socialize_beans.xml -->
		<property name="iconSize" value="64" type="integer"/>
	</bean>

	<bean 
		id="commentListItem" 
		class="com.socialize.ui.comment.CommentListItem"
		singleton="false">
		<constructor-arg type="activity"/>
		<init-method name="init"/>
		<property name="deviceUtils" ref="deviceUtils"/>
		<property name="colors" ref="colors"/>
	</bean>
	
	<bean 
		id="listItemLoadingView" 
		class="com.socialize.ui.view.ListItemLoadingView"
		singleton="false"
		extends="socializeView">
		<constructor-arg type="activity"/>
		<init-method name="init"/>
		<property name="deviceUtils" ref="deviceUtils"/>
		<property name="colors" ref="colors"/>
	</bean>
	
	<bean 
		id="uiViewFactory"
		abstract="true">
		<property name="deviceUtils" ref="deviceUtils"/>
		<property name="drawables" ref="drawables"/>
		<property name="colors" ref="colors"/>
	</bean>
	
	<bean 
		id="commentHeaderFactory" 
		class="com.socialize.ui.comment.CommentHeaderFactory"
		extends="uiViewFactory"/>
		
	<bean 
		id="commentEditFieldFactory" 
		class="com.socialize.ui.comment.CommentEditFieldFactory"
		extends="uiViewFactory"/>
		
	<bean 
		id="commentContentViewFactory" 
		class="com.socialize.ui.comment.CommentContentViewFactory"
		extends="uiViewFactory"/>
		
	<bean 
		id="commentDetailContentViewFactory" 
		class="com.socialize.ui.comment.CommentDetailContentViewFactory"
		extends="uiViewFactory">
		
		<property name="geoUtils" ref="geoUtils"/>
		<property name="dateUtils" ref="dateUtils"/>
		
	</bean>
	
	<bean 
		id="commentList" 
		class="com.socialize.ui.comment.CommentListView"
		singleton="false"
		extends="socializeView">
		<constructor-arg type="activity"/>

		<init-method name="init"/>
		
		<property name="commentAdapter" ref="commentAdapter"/>
		<property name="drawables" ref="drawables"/>
		<property name="progressDialogFactory" ref="progressDialogFactory"/>
		<property name="commentHeaderFactory" ref="commentHeaderFactory"/>
		<property name="commentEditFieldFactory" ref="commentEditFieldFactory"/>
		<property name="commentContentViewFactory" ref="commentContentViewFactory"/>
		<property name="keyboardUtils" ref="keyboardUtils"/>
		<property name="authRequestDialogFactory" ref="authRequestDialogFactory"/>
	</bean>
	
	<bean 
		id="commentDetailLayoutView" 
		class="com.socialize.ui.comment.CommentDetailLayoutView"
		singleton="false"
		extends="socializeView">
		
		<constructor-arg type="activity"/>

		<init-method name="init"/>
		
		<property name="drawables" ref="drawables"/>
		<property name="progressDialogFactory" ref="progressDialogFactory"/>
		<property name="commentHeaderFactory" ref="commentHeaderFactory"/>
		<property name="commentDetailContentViewFactory" ref="commentDetailContentViewFactory"/>
		<property name="imageLoader" ref="imageLoader"/>
	</bean>
	
<!--  End Comment UI -->
	
<!-- Profile UI -->
	
	<bean 
		id="profileLayoutView" 
		class="com.socialize.ui.profile.ProfileLayoutView"
		singleton="false"
		extends="socializeView">
		<constructor-arg type="activity"/>

		<init-method name="init"/>
		
		<property name="drawables" ref="drawables"/>
		<property name="userService" ref="userService"/>
		<property name="progressDialogFactory" ref="progressDialogFactory"/>
		<property name="profileHeaderFactory" ref="profileHeaderFactory"/>
		<property name="profileContentViewFactory" ref="profileContentViewFactory"/>
		<property name="imageLoader" ref="imageLoader"/><!-- Defined in socialize_beans.xml -->
		<property name="bitmapUtils" ref="bitmapUtils"/><!-- Defined in socialize_beans.xml -->
	</bean>
	
	<bean 
		id="profileHeaderFactory" 
		class="com.socialize.ui.profile.ProfileHeaderFactory"
		extends="uiViewFactory"/>
		
	<bean 
		id="profileImageContextMenu" 
		class="com.socialize.ui.profile.DefaultProfileImageContextMenu" 
		singleton="false">
		<constructor-arg type="activity"/>	
		<property name="deviceUtils" ref="deviceUtils"/>
	</bean>
	
	<bean 
		id="profileContentViewFactory" 
		class="com.socialize.ui.profile.ProfileContentViewFactory"
		extends="uiViewFactory">
		<property name="profileCancelButtonFactory" ref="profileCancelButtonFactory"/>
		<property name="profileSaveButtonFactory" ref="profileSaveButtonFactory"/>
		<property name="profileEditButtonFactory" ref="profileEditButtonFactory"/>	
		<property name="facebookSignOutButtonFactory" ref="facebookSignOutButtonFactory"/>
		<property name="facebookSignOutClickListenerFactory" ref="facebookSignOutClickListenerFactory"/>
		<property name="profileSaveButtonListenerFactory" ref="profileSaveButtonListenerFactory"/>	
		<property name="profileImageContextMenuFactory" ref="profileImageContextMenuFactory"/>	
	</bean>
		
	<bean 
		id="profileEditButton" 
		singleton="false"
		extends="socializeButton">
		<constructor-arg type="activity"/>
		<property name="text" value="Edit Your Profile"/>
		<property name="bottomColor" value="GRAY_BTN_BOTTOM"/>
		<property name="topColor" value="GRAY_BTN_TOP"/>
		<property name="strokeTopColor" value="GRAY_BTN_TOP_STROKE"/>
		<property name="strokeBottomColor" value="GRAY_BTN_BOTTOM_STROKE"/>		
		<property name="height" value="36" type="integer"/>
		<property name="width" value="150" type="integer"/>
		<property name="textSize" value="11" type="integer"/>
		<property name="textAlign" value="center"/>
	</bean>
	
	<bean 
		id="profileSaveButton" 
		singleton="false"
		extends="socializeButton">
		<constructor-arg type="activity"/>
		<property name="text" value="Save"/>
		<property name="height" value="36" type="integer"/>
		<property name="width" value="70" type="integer"/>
		<property name="textSize" value="11" type="integer"/>
		<property name="textAlign" value="center"/>
		<property name="padding" value="2" type="integer"/>
		<property name="bold" value="true" type="boolean"/>
		
	</bean>
	
	<bean 
		id="profileCancelButton" 
		singleton="false"
		extends="socializeButton">
		<constructor-arg type="activity"/>
		<property name="text" value="Cancel"/>
		<property name="bottomColor" value="GRAY_BTN_BOTTOM"/>
		<property name="topColor" value="GRAY_BTN_TOP"/>
		<property name="strokeTopColor" value="GRAY_BTN_TOP_STROKE"/>
		<property name="strokeBottomColor" value="GRAY_BTN_BOTTOM_STROKE"/>
		<property name="height" value="36" type="integer"/>
		<property name="width" value="70" type="integer"/>
		<property name="textSize" value="11" type="integer"/>
		<property name="textAlign" value="center"/>
		<property name="padding" value="2" type="integer"/>
	</bean>
	
	<bean 
		id="profileSaver" 
		singleton="true"
		class="com.socialize.ui.profile.DefaultProfileSaver">
		<property name="bitmapUtils" ref="bitmapUtils"/>
	</bean>
	
	<bean 
		id="profileSaveButtonListener" 
		singleton="false"
		class="com.socialize.ui.profile.ProfileSaveButtonListener">
		<property name="profileSaver" ref="profileSaver"/>
		<property name="errorHandler" ref="socializeUIErrorHandler"/>
		<property name="progressDialogFactory" ref="progressDialogFactory"/>
	</bean>
	
	<factory id="profileCancelButtonFactory" makes="profileCancelButton"/>
	<factory id="profileSaveButtonFactory" makes="profileSaveButton"/>
	<factory id="profileEditButtonFactory" makes="profileEditButton"/>
	<factory id="facebookSignOutButtonFactory" makes="facebookSignOutButton"/>
	<factory id="facebookSignOutClickListenerFactory" makes="facebookSignOutClickListener"/>
	<factory id="profileSaveButtonListenerFactory" makes="profileSaveButtonListener"/>
	<factory id="profileImageContextMenuFactory" makes="profileImageContextMenu"/>
	
<!-- End Profile UI -->
	

<!--  Image Loader  -->
	<bean id="imageUrlLoader" class="com.socialize.ui.image.ImageUrlLoader"/>
	
	<bean id="imageLoadAsyncTask" class="com.socialize.ui.image.ImageLoadAsyncTask">
		<property name="imageUrlLoader" ref="imageUrlLoader"/>
		<property name="logger" ref="logger"/>
		<property name="cache" ref="cache"/>
	</bean>

	<bean id="imageLoader" class="com.socialize.ui.image.ImageLoader">
		<property name="drawables" ref="drawables"/>
		<property name="imageLoadAsyncTask" ref="imageLoadAsyncTask"/>
		<property name="logger" ref="logger"/>
		<init-method name="init"/>
		<destroy-method name="destroy"/>
	</bean>
<!--  End Image Loader -->

	
</beans>