<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#38444f">
    
    <ImageView 
    	android:src="@drawable/socialize_trans_bg_light" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"
    	android:layout_gravity="center_vertical|left"
    	android:padding="10dip"/>
    	

	<TextView
		android:textSize="12dp"
		android:text="Entity Key"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/txtKey"
		android:textSize="12dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView
		android:textSize="12dp"
		android:text="Name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/txtName"
		android:textSize="12dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	
	<TextView
		android:textSize="12dp"
		android:text="Meta Data"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/txtMeta"
		android:textSize="12dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />	
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="12dip">
		
		<Button
			android:id="@+id/btnEntityCreate"
			android:text="Add Entity"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />	
		
		<Button
			android:id="@+id/btnEntityGet"
			android:text="Get Entity"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
			
		<TextView
			android:id="@+id/txtEntityCreateResult"
			android:padding="3dip"
			android:textSize="12dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="ID" 
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityIdCreated"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Key"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityKeyCreated"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Name"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityNameCreated"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Meta"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityMetaCreated"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>	    
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Shares"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityShares"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Likes"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityLikes"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Views"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityViews"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:textSize="12dp"
			android:text="Comments"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/txtEntityComments"
			android:textSize="12dp"
			android:padding="4dip"
			android:layout_margin="4dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
	</LinearLayout>
</LinearLayout>